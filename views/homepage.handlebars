<h1>Explore Book Collections</h1>

  <div class="row">
    {{#each users}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h3>{{this.name}}'s Collection</h3>
          </div>
          <div class="card-body">
            {{#if this.books.length}}
              <ul class="list-group">
                {{#each this.books}}
                  <li class="list-group-item">
                    <img src="{{this.coverImageUrl}}" alt="{{this.title}}" style="width: 50px; height: auto;"/>
                    {{this.title}} by {{this.author}}
                  </li>
                {{/each}}
              </ul>
            {{else}}
              <p>No books in this collection yet.</p>
            {{/if}}
          </div>
          <div class="card-footer">
            <a href="/collection/{{this.id}}" class="btn btn-primary">View Full Collection</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>